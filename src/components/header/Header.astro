---
import Image from "astro/components/Image.astro";
import LogoWithNameAtomic from "../../../public/logowithname.png";
import Instagram from "../../images/Instagram.astro";
import LinkedIn from "../../images/LinkedIn.astro";
import Threads from "../../images/Threads.astro";
import Tiktok from "../../images/Tiktok.astro";

const menuItems = [
  { name: "Inicio", link: "/" },
  { name: "Servicios", link: "/servicios" },
  { name: "Blog", link: "/blog" },
  { name: "CV", link: "/cv" },
  { name: "Proyectos", link: "/proyectos" },
];

const menuNetwork = [
  { icon: Instagram, link: "/", class: "" },
  { icon: LinkedIn, link: "/", class: "" },
  { icon: Threads, link: "/", class: "" },
  { icon: Tiktok, link: "/", class: "" },
];
---

<header class="h-16 w-full bg-bg-100 fixed">
  <nav class="h-full w-full flex justify-between">
    <div class="flex justify-center items-center min-w-56">
      <Image src={LogoWithNameAtomic} alt={`Logo with name icon`} width={180} class={``} />
    </div>

    <ul class={`flex gap-8 justify-center items-center text-text-100`}>
      {
        menuItems.map((item) => (
          <li
            class={
              Astro.url.pathname === item.link
                ? "underline underline-offset-4"
                : ""
            }
          >
            <a href={item.link}>{item.name}</a>
          </li>
        ))
      }
    </ul>

    <ul class={`flex justify-center items-center gap-8 mr-8`}>
      {
        menuNetwork.map((item) => {
          const IconComponent = item.icon;
          return (
            <li>
              <a href={item.link}>
                <IconComponent class={`size-6 fill-text-100 text-black ${item.class}`} />
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>
